<header>
    <h1>Sign In</h1>
</header>

<%= form_tag session_path %>
<fieldset>
    <ol>
        <li>
            <%= label_tag :email %>
            <%= email_field_tag :email, nil, required: true %>
        </li>
        <li>
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, required: true %>
        </li>
    </ol>
    <p>
        <%= submit_tag %>
    </p>
    <p>
        No account yet? <%= link_to 'Sign-up!', new_user_path %>
    </p>
</fieldset>
